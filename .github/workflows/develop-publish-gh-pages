# File: .github/workflows/deploy-develop-gh-pages.yml
name: Build & Publish to gh-pages (develop)

on:
  push:
    branches: [ develop ]

concurrency:
  group: develop-gh-pages
  cancel-in-progress: true

permissions:
  contents: write

jobs:
  build-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout source
        uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: npm

      - name: Install dependencies
        run: npm ci

      # Optional: run tests
      # - name: Test
      #   run: npm test -- --ci

      - name: Build
        run: npm run build

      # Publish dist/ → gh-pages branch
      - name: Deploy to gh-pages
        uses: peaceiris/actions-gh-pages@v4
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./dist
          publish_branch: gh-pages
          # Set these if you want clean, single-commit history on gh-pages:
          force_orphan: true
          # Optional: customize commit message
          commit_message: "Deploy develop → gh-pages: ${{ github.sha }}"
